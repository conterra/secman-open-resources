{
    "$schema": "../../../schema/policies.schema.json",
    "properties": {
        "key1": "a value",
        "key2": "value from environment ${env.property}"
    },
    "restrictions": {
        "spatial_restriction_id": {
            "type": "spatial",
            "source": "${key2}"
        }
    },
    "policies": [
        {
            "layers": [
                "${layer_key}"
            ],
            "roles": [
                "${role_key}"
            ],
            "restrictions": [
                "${restriction_key}"
            ]
        }
    ],
    "fallbackPolicies": [{
        "layers": [
            "${layer_key}"
        ],
        "restrictions": [
            "${restriction_key}"
        ]
    }]
}
